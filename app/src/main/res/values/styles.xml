<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="dark"></style>
	
	<style name="dark" parent="@android:style/Theme.Material">
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/colorNavigation</item>
		<item name="colorNormal">@color/colorNormal</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="colorCenter">@color/colorCenter</item>
    </style>

    <style name="light" parent="@android:style/Theme.Material">
        <item name="android:colorPrimaryDark">@color/snow</item>
        <item name="android:colorPrimary">@color/floralwhite</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:navigationBarColor">@color/snow</item>
		<item name="colorNormal">@color/black</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="colorCenter">@color/white</item>
    </style>
	
</resources>
